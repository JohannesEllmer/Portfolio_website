---
import "../styles/global.css";
import PageProgress from "@/components/ui/PageProgress";
import SectionDotsNav from "@/components/ui/SectionDotsNav";
import BackToTop from "@/components/ui/BackToTop";

interface Props {
  title?: string;
  description?: string;
  lang?: string;
  ogImage?: string;
}

const {
  title = "Portfolio – Ellmer Johannes",
  description = "Modernes Entwickler-Portfolio mit Projekten, Zertifikaten und Werdegang.",
  lang = "de",
  ogImage = "/social-card.png",
} = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- Open Graph / Twitter -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={ogImage} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Theme Colors (hell/dunkel) -->
    <meta name="theme-color" media="(prefers-color-scheme: light)" content="#ffffff" />
    <meta name="theme-color" media="(prefers-color-scheme: dark)" content="#1c1c1c" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <link rel="icon" type="image/png+xml" href="/favicon.png" />
  </head>

  <body
    class="min-h-screen bg-background text-foreground font-sans antialiased selection:bg-purple-500/20 selection:text-purple-500"
  >
    <!-- GLOBAL WALLPAPER -->
    <div
      class="fixed inset-0 -z-20 bg-cover bg-center bg-no-repeat opacity-50"
      style="background-image: url('/backgroundimg.jpg');"
    ></div>

    <!-- Vorhandener Hintergrund-Gradient -->
    <div
      class="fixed inset-0 -z-10 h-full w-full bg-background
            bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.25),rgba(255,255,255,0))]"
      aria-hidden="true"
    ></div>

    <!-- Accessibility: Skip-Link -->
    <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2
                          focus:rounded-md focus:bg-white/10 focus:px-3 focus:py-2">
      Zum Inhalt springen
    </a>

    <!-- Globale UI-Features (Client) -->
    <PageProgress client:load />
    <SectionDotsNav client:load />
    <BackToTop client:load />

    <!-- Seiteninhalt -->
    <main id="main">
      <slot />
    </main>

    <!-- Persistentes Theme-Handling -->
    <script is:inline>
      // bevorzugtes Theme ermitteln
      const getThemePreference = () => {
        try {
          const stored = localStorage.getItem("theme");
          if (stored) return stored;
        } catch {}
        return window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light";
      };

      const ensureTheme = () => {
        const isDark = getThemePreference() === "dark";
        document.documentElement.classList[isDark ? "add" : "remove"]("dark");
      };

      ensureTheme();

      // Änderungen mitschreiben, damit der Toggle persistiert
      try {
        const observer = new MutationObserver(() => {
          const isDark = document.documentElement.classList.contains("dark");
          localStorage.setItem("theme", isDark ? "dark" : "light");
        });
        observer.observe(document.documentElement, { attributes: true, attributeFilter: ["class"] });
      } catch {}
    </script>

    <style>
      html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        scroll-behavior: smooth;
      }
      :root { --transition-standard: 0.3s cubic-bezier(0.4, 0, 0.2, 1); }
      body {
        transition:
          background-color var(--transition-standard),
          color var(--transition-standard);
      }
    </style>
  </body>
</html>